<!-- Indicar el modelo que vamos a utilizar -->
@model IEnumerable<PracticaBrive.Models.Producto>

@{
    ViewData["Title"] = "Inicio";
}

<h1 class="text-center">PRODUCTOS</h1>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="CrearProducto" asp-controller="Productos" class="btn btn-success"><i class="bi bi-file-plus-fill"></i> Nuevo Producto</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Productos</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tbtProductos" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.CodigoDeBarras)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Cantidad)</th>
                                    <th>@Html.DisplayNameFor(m => m.Precio)</th>
                                    <th>@Html.DisplayNameFor(m => m.idSucursal)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.CodigoDeBarras)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Cantidad)</td>
                                        <td>@Html.DisplayFor(m => item.Precio)</td>
                                        <td>@Html.DisplayFor(m => item.idSucursal)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="EditarProducto" asp-route-id="@item.CodigoDeBarras"><i class="bi bi-pencil-fill"></i> Editar</a>
                                            <a class="btn btn-secondary" asp-action="DetalleProducto" asp-route-id="@item.CodigoDeBarras"><i class="bi bi-info-circle-fill"></i> Detalle</a>
                                            <a class="btn btn-danger" asp-action="BorrarProducto" asp-route-id="@item.CodigoDeBarras"><i class="bi bi-eraser-fill"></i> Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>